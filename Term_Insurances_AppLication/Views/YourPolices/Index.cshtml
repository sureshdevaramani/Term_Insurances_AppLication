
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #box input[type ="submit"] {
        border: 0;
        background: none;
        display: block;
        text-align: center;
        border: 2px solid #999999;
        padding: 10px 20px;
        outline: none;
        color: white;
        border-radius: 24px;
        transition: 0.25s;
        cursor: pointer;
        margin-top: 20px;
    }

        #box input[type ="submit"]:hover {
            background: #004c8f;
        }


    .inputclass {
        border: 0;
        background: none;
        display: block;
        text-align: center;
        border: 2px solid #999999;
        padding: 10px 5px;
        width: 200px;
        outline: none;
        color: black;
        border-radius: 10px;
        transition: 0.25s;
    }

        .inputclass input[type ="text"]:focus {
            width: 280px;
        }

    #Movedown {
        margin-top: 100px;
        height: 400px;
    }

    #MoveLeft {
        margin-left: 160px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="jumbotron" id="Movedown">
        <p class="lead" id="MoveLeft">Know Your Policy/Policies</p>
        <div class="form-group" id="MoveLeft">
            <div class="col-md-10">
                <label> Enter Customer ID</label>

                <input type="text" name="Customer_ID" required class="inputclass" />
            </div>
            <div class="col-md-10">
                <label> Enter Phone Number</label>

                <input type="text" name="Phone" required class="inputclass" />
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" id="box">
                <input type="submit" value="Login" class="btn btn-primary" />
                <div class="text-danger" style="margin-top:20px">
                    @ViewBag.Message
                </div>
            </div>
            
        </div>
    </div>
}